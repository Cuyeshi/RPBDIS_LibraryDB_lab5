@model Microsoft.AspNetCore.Identity.IdentityUser
@using RPBDIS_LibraryDB_lab5.Models

@{
    Layout = "_Layout";
    ViewData["Title"] = "Удаление пользователя";
}

<h1>Удалить пользователя</h1>
<p>
    <a asp-action="Back" class="btn btn-secondary">Вернуться на главную</a>
</p>

<p>Вы уверены, что хотите удалить пользователя <strong>@Model.UserName</strong>?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
