@model RPBDIS_LibraryDB_lab5.Models.Book

<h2>Добавить книгу</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Название</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>Автор</label>
        <input asp-for="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label>Жанр</label>
        <select asp-for="GenreId" class="form-control" asp-items="ViewBag.Genres"></select>
    </div>
    <div class="form-group">
        <label>Издатель</label>
        <select asp-for="PublisherId" class="form-control" asp-items="ViewBag.Publishers"></select>
    </div>
    <div class="form-group">
        <label>Цена</label>
        <input asp-for="Price" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label>Год издания</label>
        <input asp-for="PublishYear" type="number" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
