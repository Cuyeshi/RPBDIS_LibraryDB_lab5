@model RPBDIS_LibraryDB_lab5.Models.LoanedBook

@{
    ViewData["Title"] = "Добавить выданную книгу";
}

<h1>Добавить выданную книгу</h1>

<form asp-action="Create" method="post">
    <div>
        <label>Книга:</label>
        <select asp-for="BookId" asp-items="ViewBag.Books" class="form-control">
            <option value="">Выберите книгу</option>
        </select>
    </div>
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.BookId)
    </div>

    <div>
        <label>Дата выдачи:</label>
        <input asp-for="LoanDate" type="date" class="form-control" />
    </div>
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.LoanDate)
    </div>

    <div>
        <label>Дата возврата:</label>
        <input asp-for="ReturnDate" type="date" class="form-control" />
    </div>
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.ReturnDate)
    </div>

    <button type="submit" class="btn btn-primary">Добавить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
